---
import Layout from "@layouts/Layout.astro";
import SettingsTabs from "./_SettingsTabs.astro";
import UpdateUser from "@components/react-components/UpdateUser";
import DeleteUser from "@components/react-components/DeleteUser";
---

<Layout title="Settings">
  <div class="flex flex-col gap-4">
    <h4 class="text-4xl font-semibold text-center">Settings</h4>
    <SettingsTabs />
    <div
      class="h-full w-full flex flex-col bg-base-200 rounded-lg gap-4 px-4 py-2"
    >
      <h2 class="text-3xl font-semibold mt-4">Account info</h2>

      <UpdateUser client:load />
    </div>
    <div class="divider"></div>
    <DeleteUser client:visible />
    <div class="h-48"></div>
  </div>
</Layout>
