---
import BottomNav from "@components/BottomNav";
import BottomNavWrapper from "@components/BottomNavWrapper.astro";
import Navbar from "@components/Navbar.astro";
import SideMenu from "@components/SideMenu";
import SideMenuWrapper from "@components/SideMenuWrapper.astro";
import HideOnMobile from "@components/blocks/HideOnMobile";
import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="w-screen h-screen">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="w-full h-full bg-base-300 fixed">
    <Navbar transition:persist />
    <main class="flex flex-row h-full z-10">
      <div
        class="w-full h-full overflow-x-clip overflow-y-auto px-2 pt-2 z-40 no-scrollbars flex-grow"
      >
        <slot />
      </div>
      <HideOnMobile client:only="preact" transition:name="side-menu">
        <div class="divider-horizontal bg-base-200 overflow-y-clip"></div>
        <div class="w-fit h-full px-2 flex-grow-0">
          <SideMenuWrapper />
        </div>
      </HideOnMobile>
    </main>
    <footer class="relative z-50" transition:persist>
      <BottomNavWrapper transition:name="btm-menu" />
    </footer>
    <style is:global>
      .no-scrollbars {
        overflow: auto;
        scrollbar-width: none;
      }

      .no-scrollbars::-webkit-scrollbar {
        display: none;
      }
    </style>
  </body>
</html>
