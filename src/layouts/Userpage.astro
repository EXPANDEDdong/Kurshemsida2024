---
import BottomNav from "@components/BottomNav";
import Navbar from "@components/Navbar.astro";
import { ViewTransitions, slide } from "astro:transitions";
interface Props {
  username: string;
  bio: string;
  role: "user" | "admin";
}
const origin = Astro.url.origin;
const url = Astro.url.pathname;
const { username, bio, role } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class="w-screen h-screen bg-base-300 overflow-hidden"
  transition:animate="none"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{username}</title>
  </head>
  <body class="w-full h-full bg-base-300">
    <Navbar />
    <div class="w-full">
      <div
        class="bg-base-100 shadow-xl rounded-lg m-2 mb-8 flex flex-col gap-4 p-4"
      >
        <h1 class="text-2xl font-bold">{username}</h1>
        {role === "admin" && <div class="badge badge-warning">Admin</div>}
        <p class="text-lg">{bio}</p>
      </div>
      <div class="w-full flex justify-center">
        <div role="tablist" class="tabs tabs-boxed w-11/12 mb-8">
          <a
            href={`${origin}/user/${username}/posts`}
            class={url === `/user/${username}/posts` ? `tab tab-active` : `tab`}
          >
            Posts
          </a>
          <a
            href={`${origin}/user/${username}/comments`}
            class={url === `/user/${username}/comments`
              ? `tab tab-active`
              : `tab`}
          >
            Comments
          </a>
        </div>
      </div>
      <main class="w-full" transition:animate="fade">
        <slot />
      </main>
    </div>
    <BottomNav client:only="preact" />
  </body>
</html>
